<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dm_ms"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_nombre"
        android:textSize="22sp"
        android:hint="@string/txt_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_edad"
        android:layout_marginTop="@dimen/dm_ms"
        android:textSize="22sp"
        android:hint="@string/txt_edad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_nombre"/>
    <Button
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="@string/txt_save"
        android:padding="@dimen/dm_ms"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/dm_ms"
        android:id="@+id/btn_save"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/edt_edad"/>

    <Button
        android:id="@+id/btn_show"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_ms"
        android:padding="@dimen/dm_ms"
        android:text="@string/txt_show1"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_edad" />
    <TextView
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_ms"
        android:id="@+id/txv_nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_save"/>
        />
    <TextView
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm_ms"
        android:id="@+id/txv_edad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_show"/>
    />




</androidx.constraintlayout.widget.ConstraintLayout>